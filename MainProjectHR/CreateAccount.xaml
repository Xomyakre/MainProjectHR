<Window x:Class="MainProjectHR.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MainProjectHR"
        Height="560" Width="771"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Стиль для кнопок управления окном -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="6" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="5,8"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="0" 
                                            VerticalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding Tag}"
                                        Foreground="Gray"
                                        Margin="5,8,0,0"
                                        Visibility="{Binding Path=Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">

                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Анимация для подсветки -->
        <Storyboard x:Key="FocusedBorderAnimation">
            <ColorAnimation 
                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                To="#2196F3"
                Duration="0:0:0.2"/>
        </Storyboard>
        
        <Storyboard x:Key="UnfocusedBorderAnimation">
            <ColorAnimation 
                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                To="#E0E0E0"
                Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="10" Margin="15">
        <Border.Background>
            <SolidColorBrush Color="White" Opacity="0.95"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#FFFFFF" 
                    Opacity="0.8" 
                    CornerRadius="10,10,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                              Margin="10,0,0,0" 
                              VerticalAlignment="Center">
                        <Button x:Name="CloseButton"
                                Style="{StaticResource WindowButtonStyle}"
                                Background="#FF5F57"
                                Click="BackButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основное содержимое -->
            <Grid Grid.Row="1" Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая панель с формой -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <Image Source="/Images/logo.png"
                           Height="80"
                           Width="80"
                           Margin="0,0,0,20"/>

                    <TextBlock Text="Создать аккаунт"
                             FontSize="24"
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"/>

                    <!-- Username Input -->
                    <TextBox x:Name="txtNewUsername"
                             Margin="0,0,0,15"
                             Width="280" 
                             FontSize="14" 
                             materialDesign:HintAssist.Hint="Введите логин"
                             BorderThickness="0,0,0,1"
                             BorderBrush="#E0E0E0"
                             Background="Transparent"
                             Foreground="#333333"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:TextFieldAssist.UnderlineBrush="#2196F3"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                    <!-- Password Input -->
                    <PasswordBox Margin="0,0,0,15" 
                                 x:Name="txtNewPassword"
                                 Width="280" 
                                 FontSize="14" 
                                 materialDesign:HintAssist.Hint="Введите пароль"
                                 BorderThickness="0,0,0,1"
                                 BorderBrush="#E0E0E0"
                                 Background="Transparent"
                                 Foreground="#333333"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#2196F3"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

                    <!-- Confirm Password Input -->
                    <PasswordBox Margin="0,0,0,15"
                                 x:Name="txtConfirmPassword"
                                 Width="280" 
                                 FontSize="14" 
                                 materialDesign:HintAssist.Hint="Подтвердите пароль"
                                 BorderThickness="0,0,0,1"
                                 BorderBrush="#E0E0E0"
                                 Background="Transparent"
                                 Foreground="#333333"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#2196F3"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

                    <Button x:Name="createAccountBtn"
                            Content="Создать аккаунт"
                            Style="{StaticResource ModernButton}"
                            Margin="0,20,0,0"
                            Click="CreateAccountBtn_Click"/>

                    <TextBlock x:Name="MessageTextBlock"
                               Margin="0,10,0,0"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>

                    <ProgressBar x:Name="registrationProgressBar"
                                 Height="4"
                                 Margin="0,10,0,0"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Visibility="Collapsed"/>
                </StackPanel>

                <!-- Правая панель с инструкцией -->
                <Border Grid.Column="1" 
                        Background="#F5F5F5" 
                        CornerRadius="5"
                        Margin="20,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-14,0,-18,0">
                        <StackPanel Margin="20">
                            <StackPanel Orientation="Horizontal" Margin="-35,0,0,20" Width="343">
                                <materialDesign:PackIcon Kind="Security" 
                                                       Width="23" 
                                                       Height="23"
                                                       VerticalAlignment="Center"
                                                       Foreground="#2196F3"
                                                       Margin="12,0,3,0"/>
                                <TextBlock Text="Требования безопасности" 
                                         FontSize="24"
                                         FontWeight="SemiBold"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Требования к регистрации -->
                            <ItemsControl>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" 
                                                CornerRadius="5" 
                                                Padding="15" 
                                                Margin="0,0,0,20"
                                                Effect="{StaticResource MaterialDesignElevationShadow2}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" 
                                                        Background="#2196F3" 
                                                        CornerRadius="5"
                                                        Width="24" Height="24"
                                                        Margin="0,0,15,0">
                                                    <TextBlock Text="{Binding Number}" 
                                                             Foreground="White" 
                                                             HorizontalAlignment="Center" 
                                                             VerticalAlignment="Center"
                                                             FontWeight="SemiBold"/>
                                                </Border>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}" 
                                                             FontWeight="SemiBold" 
                                                             Foreground="#333333"
                                                             Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding Description}"
                                                             Foreground="#666666"
                                                             TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.Items>
                                    <!-- Пункт 1 -->
                                    <Border Margin="0,10,0,20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" 
                                                    Background="#2196F3" 
                                                    CornerRadius="5"
                                                    Width="24" Height="24"
                                                    Margin="0,0,15,0">
                                                <TextBlock Text="1" 
                                                         Foreground="White" 
                                                         HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"
                                                         FontWeight="SemiBold"/>
                                            </Border>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Требования к логину" 
                                                         FontWeight="SemiBold" 
                                                         Foreground="#333333"
                                                         Margin="0,0,0,4"/>
                                                <TextBlock Text="Минимум 3 символа, без пробелов"
                                                         Foreground="#666666"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Пункт 2 -->
                                    <Border Margin="0,10,0,20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" 
                                                    Background="#2196F3" 
                                                    CornerRadius="5"
                                                    Width="24" Height="24"
                                                    Margin="0,0,15,0">
                                                <TextBlock Text="2" 
                                                         Foreground="White" 
                                                         HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"
                                                         FontWeight="SemiBold"/>
                                            </Border>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Надежный пароль" 
                                                         FontWeight="SemiBold" 
                                                         Foreground="#333333"
                                                         Margin="0,0,0,4"/>
                                                <TextBlock Foreground="#666666"
                                                         TextWrapping="Wrap">
                                                    • Минимум 8 символов
                                                    <LineBreak/>
                                                    • Хотя бы одна заглавная буква
                                                    <LineBreak/>
                                                    • Хотя бы одна цифра
                                                    <LineBreak/>
                                                    • Без пробелов
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Пункт 3 -->
                                    <Border Margin="0,10,0,20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" 
                                                    Background="#2196F3" 
                                                    CornerRadius="5"
                                                    Width="24" Height="24"
                                                    Margin="0,0,15,0">
                                                <TextBlock Text="3" 
                                                         Foreground="White" 
                                                         HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"
                                                         FontWeight="SemiBold"/>
                                            </Border>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Подтверждение" 
                                                         FontWeight="SemiBold" 
                                                         Foreground="#333333"
                                                         Margin="0,0,0,4"/>
                                                <TextBlock Text="Пароли должны совпадать"
                                                         Foreground="#666666"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </ItemsControl.Items>
                            </ItemsControl>

                            <!-- Дополнительная информация -->
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <Border Background="#F5F5F5" 
                                    CornerRadius="5" 
                                    Padding="15" 
                                    Margin="30,353,30,27" Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Information" 
                                                           Width="20" Height="20" 
                                                           Foreground="#2196F3" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                        <TextBlock Text="Все поля обязательны для заполнения" 
                                             Foreground="#333333"
                                             FontWeight="Medium"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
