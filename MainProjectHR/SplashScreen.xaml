<Window x:Class="MainProjectHR.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="SplashScreen"
        Height="400"
        Width="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="15" Margin="15">
        <Border.Background>
            <SolidColorBrush Color="White" Opacity="0.95"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid x:Name="MainContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border Grid.Row="0" 
                    Background="#FFFFFF" 
                    Opacity="0.8" 
                    Height="40"
                    CornerRadius="15,15,0,0"/>

            <!-- Основной контент -->
            <Grid Grid.Row="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Row="0" 
                          HorizontalAlignment="Center"
                          Margin="0,20">
                    <Border Width="80" 
                            Height="80" 
                            CornerRadius="40"
                            Background="#2196F3">
                        <Image Source="/Images/logo.png"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <RotateTransform x:Name="LogoRotation"/>
                            </Image.RenderTransform>
                        </Image>
                    </Border>
                    <TextBlock Text="HI-Agent"
                             FontSize="28"
                             FontWeight="SemiBold"
                             Foreground="#2196F3"
                             Margin="0,20,0,0"
                             HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Прогресс загрузки -->
                <StackPanel Grid.Row="1" 
                          VerticalAlignment="Center"
                          Margin="0,20">
                    <TextBlock Text="Загрузка..."
                             FontSize="16"
                             Foreground="#666666"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,15"/>
                    <ProgressBar Height="4"
                               Width="250"
                               IsIndeterminate="True"
                               Background="#E0E0E0"
                               Foreground="#2196F3"/>
                </StackPanel>

                <!-- Нижняя информация -->
                <TextBlock Grid.Row="2" 
                         Text="© 2024 HI-Agent. Все права защищены"
                         FontSize="12"
                         Foreground="#999999"
                         HorizontalAlignment="Center"
                         Margin="0,20"/>
            </Grid>
        </Grid>
    </Border>
</Window>
