<UserControl x:Class="MainProjectHR.Views.CandidateDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F4F6FA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="*"/>
            <!-- Основной контент -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Детали кандидата" 
                   FontSize="32" FontWeight="Bold" 
                   Foreground="#3f51b5" Margin="0 0 0 20"/>

        <!-- Основной контент -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Имя:" FontSize="16" FontWeight="SemiBold" Margin="0 5"/>
            <TextBlock Text="{Binding FullName}" FontSize="14" Margin="0 5"/>

            <TextBlock Text="Должность:" FontSize="16" FontWeight="SemiBold" Margin="0 10"/>
            <TextBlock Text="{Binding SpecialtyName}" FontSize="14" Margin="0 5"/>

            <TextBlock Text="Навыки:" FontSize="16" FontWeight="SemiBold" Margin="0 10"/>
            <TextBlock Text="{Binding Skills}" FontSize="14" Margin="0 5"/>

            <TextBlock Text="Опыт (лет):" FontSize="16" FontWeight="SemiBold" Margin="0 10"/>
            <TextBlock Text="{Binding Status}" FontSize="14" Margin="0 5"/>
        </StackPanel>
    </Grid>
</UserControl>
